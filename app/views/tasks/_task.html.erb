<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Value:</strong>
    <%= task.value %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= task.type %>
  </p>

  <p>
    <strong>Order:</strong>
    <%= task.order %>
  </p>

  <p>
    <strong>Completed at:</strong>
    <%= task.completed_at %>
  </p>

  <p>
    <strong>Minutes to complete:</strong>
    <%= task.minutes_to_complete %>
  </p>

  <p>
    <strong>Completed count:</strong>
    <%= task.completed_count %>
  </p>

</div>
